.write{
  margin: 40rpx 0;
  display: flex;
  flex-direction: column;
}

.head{
  width: 80vw;
  margin: 0 20vw;
  display: flex;
  flex-direction: row;
}

.quesMark{
  margin: auto auto auto 2px;
  height: 16px;
  width: 16px;
}

.contentTitle{
  text-align: center;
}

.content{
  margin: 30rpx 5vw;
  padding: 2vw;
  border: 1px solid grey;
  height: 60vh;
  width: 86vw;
}

.count{
  position: fixed;
  top: 65vh;
  right: 10vw;
  font-size: 14px;
  color: #8A976A;
  text-shadow: -0.5px -0.5px white, 0.5px 0.5px #333;
}

.saveMode{
  display: flex;
  justify-content: space-around;
}

.next{
  width: 200rpx;
  height: 50px;
  text-align: center;
  border: 1px solid #FEFEFD;
  border-radius: 10px;
  color: #FEFEFD;
  background-color: #8A976A;
}