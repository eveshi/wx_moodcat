 <!--analysis.wxml-->
 <view class="mainpage">
  <view class="description">{{descri}}</view>
  <view class="statement">
    <textarea class="inputArea" placeholder="{{wrongHolder}}" bindinput="wrong" auto-focus/>
    <view class="trap">
      <view class="trapTitle">{{whatTrap}}</view>
      <picker class="trapPicker" bindchange="trapChange" range="{{items}}" range-key="{{'name'}}" value="{{items[index].id}}">
        <view>▶ {{items[index].name}} ◀</view>
      </picker>
    </view>
    <textarea class="inputArea" placeholder="{{rightHolder}}" bindinput="right"/>
  </view>
  <view class="statement">
    <textarea class="inputArea" placeholder="{{wrongHolder}}" bindinput="wrong" auto-focus/>
    <view class="trap">
      <view class="trapTitle">{{whatTrap}}</view>
      <picker class="trapPicker" bindchange="trapChange" range="{{items}}" range-key="{{'name'}}" value="{{items[index].id}}">
        <view>▶ {{items[index].name}} ◀</view>
      </picker>
    </view>
    <textarea class="inputArea" placeholder="{{rightHolder}}" bindinput="right"/>
  </view>
  <view class="statement">
    <textarea class="inputArea" placeholder="{{wrongHolder}}" bindinput="wrong" auto-focus/>
    <view class="trap">
      <view class="trapTitle">{{whatTrap}}</view>
      <picker class="trapPicker" bindchange="trapChange" range="{{items}}" range-key="{{'name'}}" value="{{items[index].id}}">
        <view>▶ {{items[index].name}} ◀</view>
      </picker>
    </view>
    <textarea class="inputArea" placeholder="{{rightHolder}}" bindinput="right"/>
  </view>
  <view class="saveMode">
    <button class="next" bindtap='savemode'>{{save}}</button>
  </view>
</view>
  