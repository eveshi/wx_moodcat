<!--pages/history/history.wxml-->
<view class="mainpage">
  <view class="head">
    <view class="moodFilter">
      <picker bindchange="moodChange" range="{{filter}}" range-key="{{'value'}}" value="{{filter[index].name}}">
        <view>汪汪过滤器：▼ {{filter[index].value}} ▼</view>
      </picker>
    </view>
  </view>
</view>
<view class="text">
  <view class="content" wx:for="{{userHistory}}">
  <!-- 用首年到末年的循环来套？ -->
  <!-- 月份的话就是直接1到12月的循环就好了？ -->
    <view class="">{{item.year}}</view>
    <view class="">{{item.month}}</view>
    <view class="">{{item.day}}</view>
    <view>{{item.content}}</view>
    <image class="mood" src="{{item.mood}}" />
  </view>
</view>
